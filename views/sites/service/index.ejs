<%- include('../../layouts/header'); %>
<div class="row">
    <a href="/services/create" class="btn btn-primary">Tambah Layanan</a>
</div>

<div class="row mt-2">
    <table class="table table-bordered table-hover">
        <thead>
            <tr class="text-center">
                <th>No</th>
                <th>Nama Layanan</th>
                <th>Jenis Layanan</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% let no = 1; %>
            <% if(services.length) { %>
                <% services.forEach((service) => { %>
                <tr>
                    <td><%= no++ %> </td>
                    <td><%= service.name %> </td>
                    <td><%= service.type %> </td>
                    <td><%= service.status %> </td>
                    <td class="text-center">
                        <a href="/services/<%= service.id %>/edit" class="btn btn-warning">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="/services/<%= service.id %>/delete" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                <% }) %>
            <% } %>
        </tbody>

    </table>
</div>


<%- include('../../layouts/footer'); %>